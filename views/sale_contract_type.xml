<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="sale_order_form_contract_type">
            <field name="name">sale.order.form.contract.type</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="before">
                    <field name="contract_type" readonly="1"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="sale_order_form_contract_type_manager">
            <field name="name">sale.order.form.contract.type.manager</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_order_form_contract_type"/>
            <field name="groups_id" eval="[(6, 0, [ref('group_sale_contract_type_manager') ])]"/>
            <field name="arch" type="xml">
                <field name="contract_type" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>
